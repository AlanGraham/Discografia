@model MVCDiscografia.Models.Formato

@{
    ViewBag.Title = "Eliminar Formato";
}

<h2>Eliminar Formato</h2>

<h3>¿Seguro que quieres eliminar este formato?</h3>
<div>
    <h4>Formato</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
